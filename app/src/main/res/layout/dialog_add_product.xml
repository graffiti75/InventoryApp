<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_activity_add_product__linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Product Name -->

            <TextView
                style="@style/TitleTextViewDialog"
                android:text="@string/dialog_add_product__name_label" />

            <EditText
                android:id="@+id/id_dialog_add_product__product_name_edit_text"
                style="@style/EditTextDialog"
                android:hint="@string/dialog_add_product__name_hint" />

            <!-- Product Image -->

            <TextView
                style="@style/TitleTextViewDialog"
                android:text="@string/dialog_add_product__image_label" />

            <EditText
                android:id="@+id/id_dialog_add_product__image_url_edit_text"
                style="@style/EditTextDialog"
                android:hint="@string/dialog_add_product__image_hint"
                android:maxLines="3" />

            <!-- Product Price -->

            <TextView
                style="@style/TitleTextViewDialog"
                android:text="@string/dialog_add_product__price_label" />

            <EditText
                android:id="@+id/id_dialog_add_product__price_edit_text"
                style="@style/EditTextDialog"
                android:hint="@string/dialog_add_product__price_hint" />

            <!-- Button -->

            <Button
                android:id="@+id/id_dialog_add_product__button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/dialog_add_product__add_product" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>