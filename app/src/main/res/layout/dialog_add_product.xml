<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Product Name -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/id_activity_add_product__product_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type the product name" />

        <!-- Product Image -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Image"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/id_activity_add_product__image_url_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type the image url" />

        <!-- Product Price -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/id_activity_add_product__price_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type the product price" />

        <!-- Button -->

        <Button
            android:id="@+id/id_activity_add_product__button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Add Product" />
    </LinearLayout>
</LinearLayout>